<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>

    <RadioGroup
        android:id="@+id/main_rgp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/menu_book_select"
            android:gravity="center"
            android:padding="8dp"
            android:text="书架"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="15sp"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/menu_community_select"
            android:gravity="center"
            android:padding="8dp"
            android:text="社区"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="15sp"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/menu_find_select"
            android:gravity="center"
            android:padding="8dp"
            android:text="发现"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="15sp"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/menu_more_select"
            android:gravity="center"
            android:padding="8dp"
            android:text="更多"
            android:textColor="@drawable/menu_color_selector"
            android:textSize="15sp"/>
    </RadioGroup>
</LinearLayout>
